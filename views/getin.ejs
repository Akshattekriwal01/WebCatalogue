			<input style="margin: 9px"type="text" placeholder="Name" name="name"/>
			<input style="margin: 9px"type="email" placeholder="Email" name="username"/>
			<input style="margin: 9px"type="password" placeholder="Password" name="password" />
			<button class="button-getin"style="color:white; font-weight:bold;">SIGN UP</button>
		</form>
