        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
            <img src ="<%= x.image %>">
                <div class="caption">
                <h4><%= x.name %></h4>
                </div>
            </div>
        </div>
        <% }); %> 
    </div>
</div>

