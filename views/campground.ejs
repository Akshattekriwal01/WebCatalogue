<%include partials/header%>

<div class="container">
    <header class="jumbotron">
    <div class = "container">
        <h1>Welcome</h1>
        <p> some details can go in here </p>
        <p>
        <a class="btn btn-primary btn-large" href="/campground/new"> Create a Camp </a>
        </p></div>

        </header>
        <!-- use this style to fix heigt of images-->
