
<%include ../partials/header%>


<h1> <%=campground.name%> </h1>
<img src="<%=campground.image%>">
<p> <%=campground.description%> </p>

<%campground.comments.forEach(function(x){ %>
    <p>
        <strong><%= x.author %></strong> - <%= x.text %>
    </p>
<% }) %>

<div >
    <form action="/campground/<%=campground._id%>/comment" method= "POST">
    <div class = "form-group">
    <textarea name="content" cols="150" rows="3" style="border: 0.3em solid #e5e5e6; border-radius: 10px; outline: none" >New Comment</textarea>
    </div>
        <div class = "form-group">
    <button class="btn btn-primary">Submit!</button>
    </div>

    </form>
</div>
