
<%include ../partials/header%>
<div class ="container">
    <div class ="row">
         <div class="col-md-3">
            <p class="lead">My Business</p>
                <div class ="list-group">
                    <li class ="list-group-item active">Info 1 </li>
                    <li class ="list-group-item ">Info 2 </li>
                     <li class ="list-group-item">Info 3 </li>
                </div>
                <!--map goes here-->
         </div>
          <div class="col-md-9">         
             <div class="thumbnail">
              <img class="img-responsive" src="<%=campground.image%>">
                <div class="caption-full"><h4 class="pull-right">$9.00</h4>
                    <h4> <%=campground.name%> </h4>
                    <p> <%=campground.description%> </p>
                </div>               
             </div>
             <div class="well">
                    <form action="/campground/<%=campground._id%>/comment" method= "POST">
                        <div class = "form-group">
                            <textarea name="content"  rows="3" style= "width:100%; border: 0.3em solid #e5e5e6; border-radius: 10px; outline: none" placeholder="New Comment here" id="typed" ></textarea>
                        </div>
                        <div class = "form-group text-right" >
                            <button class="btn btn-primary">Submit!</button>
                        </div>

                    </form>
                    <hr>
                    <%campground.comments.forEach(function(x){ %>
                        
                       <!-- <div class="well" style="background-color: white;" >
                            <strong style="position: relative; right: 10; bottom: 15;"><%= x.author %></strong> 
                            <br>
                           
                              </div>-->
                        <div class="row">
                            <div class="col-md-12 well" style="background-color:white;">
                                <strong style="position: relative; right: 10; bottom: 15;"><%= x.author %></strong>
                                <span class="pull-right"> 10 days ago</span>
                                <p>  <%= x.text %> <p>
                             </div>
                        </div> 
                    <% }) %>
                   
             </div>
          </div>
    </div>
</div>




